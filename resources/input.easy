programa

  numero a;
  booleano flag; // Testando a nova declaração
  texto msg;

  a = 100;
  flag = verdadeiro; // Testando a nova atribuição
  
  msg = "Teste Booleano:";
  escreva(msg);

  // Testando a nova condição
  se (flag == verdadeiro) faca {
     msg = "Flag eh verdadeira!";
     escreva(msg);
     flag = falso;
  }
  
  se (flag == falso) faca {
     msg = "Flag agora eh falsa!";
     escreva(msg);
  }

fimprog;