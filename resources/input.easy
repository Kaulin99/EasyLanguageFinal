programa

  numero i;
  numero limite;
  texto msg;

  msg = "Iniciando teste do laco PARA.";
  escreva(msg);

  limite = 5;

  // Sintaxe do novo comando 'para'
  // Vai contar de 0 at√© 4 (enquanto i < 5)
  para (i = 0; i < limite; i = i + 1) faca {
      
      msg = "Valor de i:";
      escreva(msg);
      escreva(i);
  }
  
  msg = "Fim do laco.";
  escreva(msg);

fimprog;